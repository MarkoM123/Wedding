model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
model HomeContent {
  id          Int      @id @default(1)
  heroImage   String
  description String
  steps       String   // JSON string array
  gallery     String   // JSON string array
  seoTitle    String
  seoDesc     String
  seoImage    String
}
